[flake8]
# Configuration for flake8 - Python linting tool
# Based on PEP 8 standards and copilot-instructions.md guidelines

max-line-length = 88
max-complexity = 10
select = E,W,F,C
ignore = 
    # Allow line breaks before binary operators (conflicts with Black)
    W503,
    # Allow line breaks after binary operators  
    W504,
    # Allow lambda expressions
    E731

exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    .env,
    build,
    dist,
    *.egg-info,
    .tox,
    migrations

per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow longer lines in test files for readability
    test_*.py:E501

# Enforce docstring conventions
docstring-convention = google

# Additional complexity rules
mccabe-complexity = 10