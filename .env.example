# Model Provider Configuration
# Choose your AI model provider: 'ollama' or 'openai'
MODEL_PROVIDER=ollama

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# OpenAI Configuration (optional, for OpenAI API)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Speech-to-text provider: 'google', 'offline', or 'openai'
STT_PROVIDER=google

# Optional: LangSmith for monitoring (optional)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your_langsmith_api_key_here
# LANGCHAIN_PROJECT=language-tutor

# Optional: Additional settings
# DEBUG=false
# LOG_LEVEL=INFO
